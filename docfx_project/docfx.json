{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": ["**/*.csproj"],
          "exclude": ["**/Opus.Resources/**", "**/Opus.UpdateInfoCreator/**"]
        },
        {
          "src": "../../../../CodeX/Libraries/",
          "files": ["**/*.csproj"],
          "exclude": ["**/PdfLibTests/**"]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["articles/**.md", "articles/**/toc.yml", "toc.yml", "*.md"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "overwrite": [
      {
        "files": ["apidoc/**.md"],
        "exclude": ["obj/**", "_site/**"]
      }
    ],
    "dest": "../docs",
    "globalMetadata": {
      "_appTitle": "Opus Docs",
      "_appName": "Opus Docs",
      "_appLogoPath": "images/logo38pt.png"
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": ["default", "templates/darkfx"],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": true,
    "disableGitFeatures": false
  }
}
