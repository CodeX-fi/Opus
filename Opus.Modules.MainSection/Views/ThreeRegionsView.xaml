<UserControl x:Class="Opus.Modules.MainSection.Views.ThreeRegionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:const="clr-namespace:Opus.Core.Constants;assembly=Opus.Core"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <DockPanel>
        <materialDesign:Card Padding="20" Margin="16, 8, 16, 8" DockPanel.Dock="Top" Opacity="0.8"
                             prism:RegionManager.RegionName="{x:Static const:RegionNames.MAINSECTION_THREE_FILE}">

        </materialDesign:Card>
        <DockPanel DockPanel.Dock="Top">
            <materialDesign:Card Padding="32" Margin="16, 8, 16, 8" Opacity="0.8"
                                 prism:RegionManager.RegionName="{x:Static const:RegionNames.MAINSECTION_THREE_OPTIONS}">

            </materialDesign:Card>
        </DockPanel>
        <materialDesign:Card Padding="32" Margin="16, 8, 16, 8" Opacity="0.8" Grid.Column="0"
                             prism:RegionManager.RegionName="{x:Static const:RegionNames.MAINSECTION_THREE_ACTION}">

        </materialDesign:Card>
    </DockPanel>
</UserControl>
