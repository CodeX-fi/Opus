<UserControl x:Class="Opus.Modules.MainSection.Views.TwoRegionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:const="clr-namespace:Opus.Values;assembly=Opus.Values"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <DockPanel>
        <md:Card Padding="20" Margin="16, 8, 16, 8" 
                 DockPanel.Dock="Top" Opacity="0.8"
                 prism:RegionManager.RegionName="{x:Static const:RegionNames.MAINSECTION_TWO_OPTIONS}"/>
        <md:Card Padding="32" Margin="16, 8, 16, 8"
                 Opacity="0.8"
                 prism:RegionManager.RegionName="{x:Static const:RegionNames.MAINSECTION_TWO_ACTION}"/>
    </DockPanel>
</UserControl>
