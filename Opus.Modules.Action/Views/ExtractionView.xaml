<UserControl x:Class="Opus.Modules.Action.Views.ExtractionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:resLabels="clr-namespace:Opus.Resources.Labels;assembly=Opus.Resources"
             xmlns:resTooltips="clr-namespace:Opus.Resources.ToolTips;assembly=Opus.Resources"
             xmlns:controls="clr-namespace:Opus.Styles.Controls;assembly=Opus.Styles"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" x:Key="ToolButton"
                   BasedOn="{StaticResource MaterialDesignIconButton}">
                <Setter Property="Margin" Value="0, 16, 0, 0"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" 
              HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource MaterialDesignIconButton}"
                    Grid.Column="0"
                    Margin="0, 0, 10, 0"
                    IsEnabled="{Binding ElementName=FilesList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding ViewFileCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.ViewFileButton}">
                <materialDesign:PackIcon Kind="Eye"/>
            </Button>
            <ComboBox Style="{DynamicResource MaterialDesignFloatingHintComboBox}"
                      Grid.Column="1"
                      materialDesign:HintAssist.Hint="{x:Static resLabels:General.File}"
                      materialDesign:HintAssist.FloatingOffset="0, -22"
                      materialDesign:HintAssist.FloatingScale="0.9"
                      Width="250"
                      x:Name="FilesList"
                      FontSize="16"
                      Margin="0, 0, 0, 10"
                      materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                      SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                      ItemsSource="{Binding Files}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Bottom"
                      HorizontalContentAlignment="Left">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock TextTrimming="CharacterEllipsis"
                                   Text="{Binding FileName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Style="{StaticResource MaterialDesignIconButton}"
                    Grid.Column="2"
                    Margin="10, 0, 0, 0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding ElementName=FilesList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    Command="{Binding DeleteFileCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.DeleteFileButton}">
                <materialDesign:PackIcon Kind="Delete"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <ListView ItemsSource="{Binding FileBookmarks}"
                      Style="{StaticResource SelectionList}"
                      SelectedItem="{Binding SelectedBookmark}"
                      x:Name="BookmarksList"
                      ItemTemplate="{StaticResource ExtractList}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <prism:InvokeCommandAction Command="{Binding SelectChildrenCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListView>
        </Grid>

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="2"
                    HorizontalAlignment="Center">
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding ElementName=BookmarksList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    Command="{Binding SaveFileCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.SaveAsSingleButton}">
                <materialDesign:PackIcon Kind="ContentSave"/>
            </Button>
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding ElementName=BookmarksList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    Command="{Binding SaveSeparateCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.SaveAsMultipleButton}">
                <materialDesign:PackIcon Kind="ContentSaveAll"/>
            </Button>
            <Rectangle Width="2" Fill="LightGray" Opacity="0.5" Margin="5, 20, 5, 5" RadiusX="2" RadiusY="2"/>
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding ElementName=BookmarksList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    Command="{Binding EditCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.EditButton}">
                <materialDesign:PackIcon Kind="Pencil"/>
            </Button>
            <Rectangle Width="2" Fill="LightGray" Opacity="0.5" Margin="5, 20, 5, 5" RadiusX="2" RadiusY="2"/>
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding IsFileSelected}"
                    Command="{Binding SelectAllCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.SelectAllButton}">
                <materialDesign:PackIcon Kind="SelectAll"/>
            </Button>
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding ElementName=BookmarksList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    Command="{Binding ClearCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.ClearButton}">
                <materialDesign:PackIcon Kind="Close"/>
            </Button>
            <Rectangle Width="2" Fill="LightGray" Opacity="0.5" Margin="5, 20, 5, 5" RadiusX="2" RadiusY="2"/>
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding IsFileSelected}"
                    Command="{Binding AddCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.AddButton}">
                <materialDesign:PackIcon Kind="PlusBold"/>
            </Button>
            <Button Style="{StaticResource ToolButton}"
                    IsEnabled="{Binding ElementName=BookmarksList, Path=SelectedItem, Converter={StaticResource NullToBool}}"
                    Command="{Binding DeleteCommand}"
                    ToolTip="{x:Static resTooltips:Extraction.DeleteButton}">
                <materialDesign:PackIcon Kind="Delete"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
